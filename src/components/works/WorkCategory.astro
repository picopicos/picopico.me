---
import { Icon } from 'astro-icon/components'

interface Props {
  title: string
  icon: string
}

const { title, icon } = Astro.props
---

<div class="category-group mb-8">
  <div class="flex items-center gap-3 mb-4">
    <Icon name={icon} class="size-6 text-accent" />
    <h3 class="text-lg font-semibold text-[var(--theme-h1)]">
      {title}
    </h3>
  </div>
  
  <ul class="space-y-3 ml-9">
    <slot />
  </ul>
</div> 