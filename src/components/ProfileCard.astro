---
import { Image } from 'astro:assets'
import type { FrontmatterImage } from '@types'

interface Props {
  avatarImage?: FrontmatterImage
  variant?: 'default' | 'highlight'
  className?: string
}

const { avatarImage, variant = 'default', className = '' } = Astro.props

const variantStyles = {
  default: '',
  highlight: 'py-10 bg-accent/8 p-4 rounded-xl'
}
---

<div
  class:list={[
    'flex flex-col sm:flex-row items-center justify-around sm:gap-5 max-w-full',
    variantStyles[variant],
    className
  ]}
>
  {
    avatarImage && (
      <Image
        src={avatarImage.src}
        alt={avatarImage.alt}
        class="rounded-full border-8 border-accent/15 size-40 aspect-square"
      />
    )
  }
  <div>
    <div class:list={['m-4 max-w-full prose']}>
      <slot />
    </div>
  </div>
</div>